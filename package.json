{
    "license": "MIT",
    "scripts": {
        "check:formatting": "npm run _prettier -- --check",
        "check:types": "tsc",
        "format": "npm run _prettier -- --write",
        "_prettier": "prettier --config ./.prettierrc.js --ignore-path ./.prettierignore"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "commitizen": "^4.2.4",
        "cz-conventional-changelog": "^3.3.0",
        "prettier": "^2.7.1",
        "typescript": "^4.7.4"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "resolutions": {
        "commitizen/minimist": "1.2.6",
        "commitizen/inquirer": "8.2.4"
    }
}
