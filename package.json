{
    "type": "module",
    "license": "MIT",
    "scripts": {
        "dev": "concurrently -c 'bgYellow.black,bgGreen.black' -n babel,'nodemon' 'npm:_transpile:watch' 'npm:_nodemon'",
        "build": "cross-env NODE_ENV=production npm run _node scripts/build",
        "test:watch": "npm run test -- --watch",
        "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
        "check:formatting": "npm run _prettier -- --check",
        "lint": "eslint",
        "format": "npm run _prettier -- --write",
        "_prettier": "prettier --config ./.prettierrc.cjs --ignore-path ./.prettierignore",
        "_transpile:watch": "cross-env NODE_ENV=development npm run _node scripts/build/watch.js",
        "_nodemon": "mkdirp .build && cross-env NODE_ENV=development nodemon --experimental-vm-modules --experimental-specifier-resolution=node -q .build",
        "_node": "node --experimental-vm-modules --experimental-specifier-resolution=node"
    },
    "dependencies": {
        "dotenv": "^16.0.3",
        "zod": "^3.19.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.19.3",
        "@babel/core": "^7.19.6",
        "@babel/node": "^7.19.1",
        "@babel/plugin-proposal-decorators": "^7.19.6",
        "@babel/preset-env": "^7.19.4",
        "@babel/preset-typescript": "^7.18.6",
        "@types/babel__core": "^7.1.19",
        "@types/fs-extra": "^9.0.13",
        "@types/jest": "^29.2.0",
        "@types/node": "^18.11.3",
        "@types/uglify-js": "^3.17.1",
        "@typescript-eslint/eslint-plugin": "^5.40.1",
        "@typescript-eslint/parser": "^5.40.1",
        "babel-plugin-module-resolver": "^4.1.0",
        "babel-plugin-transform-typescript-metadata": "^0.3.2",
        "commitizen": "^4.2.5",
        "concurrently": "^7.5.0",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.26.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-typescript": "^3.5.2",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-simple-import-sort": "^8.0.0",
        "fs-extra": "^10.1.0",
        "get-tsconfig": "^4.2.0",
        "jest": "^29.2.1",
        "mkdirp": "^1.0.4",
        "nodemon": "^2.0.20",
        "prettier": "^2.7.1",
        "string-argv": "^0.3.1",
        "typescript": "^4.8.4",
        "uglify-js": "^3.17.3"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "browserslist": {
        "production": [
            "node 16"
        ],
        "development": [
            "node 17.9"
        ]
    }
}
