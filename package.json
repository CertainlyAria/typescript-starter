{
    "type": "module",
    "license": "MIT",
    "scripts": {
        "dev": "concurrently -c 'bgYellow.black,bgGreen.black' -n babel,'nodemon' 'npm:_transpile:watch' 'npm:_nodemon'",
        "build": "cross-env NODE_ENV=production npm run _node scripts/build",
        "test:watch": "npm run test -- --watch",
        "test": "cross-env NODE_ENV=test NODE_OPTIONS='--import tsx/esm' jest --passWithNoTests",
        "check:formatting": "npm run _prettier -- --check",
        "lint": "eslint",
        "format": "npm run _prettier -- --write",
        "_prettier": "prettier --config ./.prettierrc.js --ignore-path ./.prettierignore",
        "_transpile:watch": "cross-env NODE_ENV=development npm run _node scripts/build/watch.js",
        "_nodemon": "mkdirp .build && cross-env NODE_ENV=development nodemon --import tsx/esm -q .build",
        "_node": "node --import tsx/esm"
    },
    "dependencies": {
        "dotenv": "^16.3.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@babel/cli": "^7.23.0",
        "@babel/core": "^7.23.3",
        "@babel/node": "^7.22.19",
        "@babel/plugin-proposal-decorators": "^7.23.3",
        "@babel/preset-env": "^7.23.3",
        "@babel/preset-typescript": "^7.23.3",
        "@types/babel__core": "^7.20.4",
        "@types/fs-extra": "^11.0.4",
        "@types/jest": "^29.5.8",
        "@types/node": "^20.9.2",
        "@types/uglify-js": "^3.17.4",
        "@typescript-eslint/eslint-plugin": "^6.11.0",
        "@typescript-eslint/parser": "^6.11.0",
        "babel-plugin-module-resolver": "^5.0.0",
        "babel-plugin-transform-typescript-metadata": "^0.3.2",
        "commitizen": "^4.3.0",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.54.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-prettier": "^5.0.1",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "fs-extra": "^11.1.1",
        "get-tsconfig": "^4.7.2",
        "jest": "^29.7.0",
        "mkdirp": "^3.0.1",
        "nodemon": "^3.0.1",
        "prettier": "^3.1.0",
        "string-argv": "^0.3.2",
        "tsx": "^4.1.3",
        "typescript": "^5.2.2",
        "uglify-js": "^3.17.4"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "browserslist": {
        "production": [
            "node 20"
        ],
        "development": [
            "node 20"
        ]
    }
}
