{
    "license": "MIT",
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
        "build": "cross-env NODE_ENV=production babel-node --config-file './babel.config.js' --extensions '.ts,.cts,.mts,.js,.cjs,.mjs' scripts/build dist",
        "test:watch": "npm run test -- --watch",
        "test": "cross-env NODE_ENV=test BABEL_TRANSFORM_ESM_TARGET=cjs jest --passWithNoTests",
        "check:formatting": "npm run _prettier -- --check",
        "lint": "eslint",
        "format": "npm run _prettier -- --write",
        "_prettier": "prettier --config ./.prettierrc.js --ignore-path ./.prettierignore"
    },
    "dependencies": {
        "dotenv": "^16.0.1",
        "zod": "^3.17.10"
    },
    "devDependencies": {
        "@babel/cli": "^7.18.9",
        "@babel/core": "^7.18.9",
        "@babel/node": "^7.18.9",
        "@babel/plugin-proposal-decorators": "^7.18.9",
        "@babel/preset-env": "^7.18.9",
        "@babel/preset-typescript": "^7.18.6",
        "@types/babel__core": "^7.1.19",
        "@types/fs-extra": "^9.0.13",
        "@types/jest": "^28.1.6",
        "@types/node": "^18.6.3",
        "@types/uglify-js": "^3.16.0",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "babel-plugin-module-resolver": "^4.1.0",
        "babel-plugin-transform-typescript-metadata": "^0.3.2",
        "commitizen": "^4.2.5",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.20.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-typescript": "^3.3.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "fs-extra": "^10.1.0",
        "jest": "^28.1.3",
        "nodemon": "^2.0.19",
        "prettier": "^2.7.1",
        "typescript": "^4.7.4",
        "uglify-js": "^3.16.3"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "browserslist": {
        "production": [
            "node 16"
        ],
        "development": [
            "node 17.9"
        ]
    }
}
